<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/app_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_up_down"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_7dp"
            android:background="@drawable/bg_trade_buy"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_11sp"
            tools:text="买涨" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textColor="@color/color_323232"
            android:textSize="@dimen/dimen_15sp"
            tools:text="---" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15sp"
            tools:text="----元" />

        <ImageView
            android:id="@+id/iv_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@mipmap/ic_voucher"
            android:visibility="gone" />

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_dianwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/dimen_18sp"
            tools:text="---" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_6dp"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:src="@drawable/trade_arrow_select" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_3dp"
        android:textColor="@color/color_b2b2b2"
        android:textSize="@dimen/dimen_13sp"
        tools:text="2018-03-12  15:23:45" />


    <View
        android:id="@+id/v_lien"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software" />


    <LinearLayout
        android:id="@+id/ll_bottom_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginRight="@dimen/app_margin"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="建仓价"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_jcprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="建仓成本"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_jcchengben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---元" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="递延费"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_gysxf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---元" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_profitLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="设置止盈"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_profitLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="建仓时间"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_jctiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---  ---" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="平仓价"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_pcprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="手续费"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_jcsxf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---元" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="平仓类型"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_pctype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="普通平仓" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_lossLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="设置止损"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_lossLimit"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_59dp"
                    android:layout_height="wrap_content"
                    android:text="平仓时间"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_pctime"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="--- ---" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/line_color" />

</LinearLayout>