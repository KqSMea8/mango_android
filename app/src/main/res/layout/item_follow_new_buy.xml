<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:background="@mipmap/bg_follow_shadow"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_10dp">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_8dp">

        <com.paizhong.manggo.widget.CircleImageView
            android:id="@+id/item_list_iv"
            android:layout_width="@dimen/dimen_37dp"
            android:layout_height="@dimen/dimen_37dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_user_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_list_iv"
            android:orientation="vertical">

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/item_list_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="----"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_week_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="周盈利率"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/dimen_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:background="@mipmap/bg_follow_time1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="建仓时间"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/dimen_10sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="13分钟前"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_13sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/dimen_7dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_7dp"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <com.paizhong.manggo.widget.RefreshView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:gravity="center_vertical"
            android:text="---"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_buy_type"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/dimen_11sp"
                    android:background="@drawable/bg_trade_buy"
                    android:text="--" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:text="--千克 --手"
                    android:textColor="@color/color_828282"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_12sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_follow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:drawableLeft="@drawable/bg_follow_care2"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:text="0"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="wrap_content"
                    android:text="建仓成本"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_cost_price"
                    android:layout_width="@dimen/dimen_62dp"
                    android:layout_height="wrap_content"
                    android:text="--元"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建仓点位"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_create_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="----"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="wrap_content"
                    android:text="浮动点位"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />


                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_point"
                    android:layout_width="@dimen/dimen_62dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建仓时间"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />


                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="----"
                    android:textSize="@dimen/dimen_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:text="建仓手续费"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_service_charge"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="止盈 "
                    android:textColor="@color/color_F74F54"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_stop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/color_F74F54"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/color_F74F54"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="止损 "
                    android:textColor="@color/color_1AC47A"
                    android:textSize="@dimen/dimen_13sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_stop_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/color_1AC47A"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/color_1AC47A"
                    android:textSize="@dimen/dimen_13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_23dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人跟买，已返还"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/dimen_13sp" />


            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/dimen_13sp" />
        </LinearLayout>

        <com.paizhong.manggo.widget.RefreshView
            android:id="@+id/tv_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_toLeftOf="@+id/tv_follow_order"
            android:background="@drawable/bg_corner_gray"
            android:drawableLeft="@mipmap/ic_pod_market2"
            android:drawablePadding="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:text="行情"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_12sp" />

        <com.paizhong.manggo.widget.RefreshView
            android:id="@+id/tv_follow_order"
            android:layout_width="@dimen/dimen_85dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_shape_follow_buy"
            android:gravity="center"
            android:text="立即跟买"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_15sp" />

    </RelativeLayout>
</LinearLayout>