<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_reset_pwd_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_30dp"
    android:orientation="vertical"
    android:visibility="gone">

    <EditText
        android:id="@+id/tv_reset_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:inputType="number"
        android:maxLength="13"
        android:maxLines="1"
        android:hint="手机号"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_login_mobile"
        android:drawablePadding="@dimen/dimen_15dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_b2b2b2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_reset_img_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_sms_code"
            android:drawablePadding="@dimen/dimen_15dp"
            android:hint="图片验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_b2b2b2" />

        <ImageView
            android:id="@+id/iv_reset_img_code"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:background="@color/color_ffffff"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_reset_msn_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_sms_code"
            android:drawablePadding="@dimen/dimen_15dp"
            android:hint="@string/verify_code"
            android:inputType="number"
            android:maxLength="6"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_b2b2b2" />

        <com.paizhong.manggo.widget.CountDownTextView
            android:id="@+id/cd_reset_send_code"
            style="@style/count_down_view_jys"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:enabled="false"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/line_color" />

    <EditText
        android:id="@+id/et_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_login_pwd"
        android:drawablePadding="@dimen/dimen_15dp"
        android:hint="@string/user_jys_register"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_b2b2b2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/line_color" />

</LinearLayout>
