<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_878787"
        android:textSize="@dimen/dimen_15sp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:text="类型"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9">
      <LinearLayout
          android:id="@+id/ll_price_num1"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_33dp"
          android:orientation="horizontal"
          android:layout_marginRight="@dimen/app_margin"
          android:gravity="center"
          android:layout_weight="3">

          <com.paizhong.manggo.widget.DinTextView
              android:id="@+id/tv_price_num1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/color_828282"
              android:textSize="@dimen/dimen_20sp"
              tools:text="-"/>

          <TextView
              android:id="@+id/tv_price_h_num1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/color_b2b2b2"
              android:textSize="@dimen/dimen_12sp"
              android:layout_marginLeft="@dimen/dimen_2dp"
              android:text="@string/text15"/>
      </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_price_num2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_33dp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/app_margin"
        android:gravity="center"
        android:layout_weight="3">

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_price_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_828282"
            android:textSize="@dimen/dimen_20sp"
            tools:text="--"/>

        <TextView
            android:id="@+id/tv_price_h_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_12sp"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:text="@string/text15"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_price_num3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_33dp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/app_margin"
        android:gravity="center"
        android:layout_weight="3">

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_price_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_828282"
            android:textSize="@dimen/dimen_20sp"
            tools:text="--"/>

        <TextView
            android:id="@+id/tv_price_h_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_12sp"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:text="@string/text15"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>