<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_13dp"
    android:layout_marginBottom="@dimen/dimen_7dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_aitao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/other_empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13dp">

        <ImageView
            android:id="@+id/iv_new_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/other_empty" />


        <FrameLayout
            android:id="@+id/fl_score_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/other_empty" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
