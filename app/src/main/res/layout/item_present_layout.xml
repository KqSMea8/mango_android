<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_u_pay"/>


        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_bank_name_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="------"/>


         <TextView
             android:id="@+id/tv_del"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="@dimen/dimen_14dp"
             android:textSize="@dimen/dimen_13sp"
             android:textColor="@color/color_008EFF"
             android:background="@drawable/bg_shape_line_008eff"
             android:paddingRight="@dimen/dimen_5dp"
             android:paddingLeft="@dimen/dimen_5dp"
             android:paddingTop="@dimen/dimen_2dp"
             android:paddingBottom="@dimen/dimen_2dp"
             android:text="解绑" />

        <CheckBox
            android:id="@+id/cb_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_2dp"
            android:button="@drawable/bg_checkbox_select"/>

    </LinearLayout>


        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"/>
</LinearLayout>