<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog_mall">


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_363030"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        tools:text="-------"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_dialog_btn_bottom">

        <TextView
            android:id="@+id/tv_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_15sp"
            android:text="关闭"/>

         <View
             android:layout_width="@dimen/line_height"
             android:layout_height="match_parent"
             android:background="@color/color_ffffff"/>

        <TextView
            android:id="@+id/tv_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:textColor="@color/color_008EFF"
            android:textSize="@dimen/dimen_15sp"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>