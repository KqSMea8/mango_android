<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingTop="@dimen/dimen_12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zd"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_16dp"
                android:background="@drawable/bg_trade_buy"
                android:gravity="center"
                android:text="买涨"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_11sp" />

            <TextView
                android:id="@+id/tv_kg_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7dp"
                android:text="---"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:src="@mipmap/ic_voucher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_37dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建仓价"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_jc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="-----"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_37dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建仓时间"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_jc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="---  ---"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />
        </LinearLayout>

    </LinearLayout>


    <com.paizhong.manggo.widget.DinTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_dianwei"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_5dp"
        android:text="---"
        android:textSize="@dimen/dimen_27sp" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/bg_state_select"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_15sp" />

</LinearLayout>