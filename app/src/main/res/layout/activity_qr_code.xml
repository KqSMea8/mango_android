<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <include  layout="@layout/layout_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"/>


     <ImageView
         android:id="@+id/iv_qr_code"
         android:layout_width="@dimen/dimen_150dp"
         android:layout_height="@dimen/dimen_150dp"
         android:layout_marginTop="@dimen/dimen_20dp"
         android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_13sp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textColor="@color/color_FF5500"
        android:text="支付方法:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="打开微信，使用扫一扫功能；点击右上角按钮从相册中选取支付二维码或截图完成扫码支付。"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/tv_suc_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_capital_withdrawals"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="完成支付"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/tv_jump_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_pingcang"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:text="打开微信"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>
</LinearLayout>