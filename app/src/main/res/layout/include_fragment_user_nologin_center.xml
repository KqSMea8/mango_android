<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_nologin_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/user_nologin_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:background="@mipmap/user_bg_money"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="爱淘商城账户"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/nologin_center_tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:text="未登录"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_008EFF"/>
    </RelativeLayout>

</LinearLayout>