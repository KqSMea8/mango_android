<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_margin"
    android:paddingRight="@dimen/app_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_14sp"
            tools:text="12:00" />

        <ImageView
            android:id="@+id/iv_country"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_28dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                tools:text="美国至4月28日当周API库存" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                android:isIndicator="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_before_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_weight="1"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_12sp"
            tools:text="前值：-84" />

        <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_12sp"
            tools:text="公布值：-361.2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_guess_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:layout_weight="1"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_12sp"
            tools:text="预测值：-280" />

        <TextView
            android:id="@+id/tv_effect_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_12sp"
            tools:text="影响：利空白银" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@color/line_color" />


</LinearLayout>