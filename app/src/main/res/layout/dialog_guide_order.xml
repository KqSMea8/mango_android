<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_dialog_bottom"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/dimen_44dp"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/bg_shape_r4_e6e6e6" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_9dp"
            android:text="恭喜，领券成功"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_26dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/guide_new_image3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@mipmap/guide_new_image2" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_45dp"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:background="@drawable/bg_shape_follow_buy"
        android:gravity="center"
        android:text="去下单"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dimen_18sp" />

</LinearLayout>