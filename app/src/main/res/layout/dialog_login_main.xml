<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_bottom"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimen_44dp"
                android:layout_height="@dimen/dimen_4dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/bg_shape_r4_e6e6e6" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_21dp"
                android:layout_marginBottom="@dimen/dimen_9dp"
                android:text="您好，请登录/注册"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_tv_safetip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:drawableLeft="@mipmap/login_safe"
                android:drawablePadding="@dimen/dimen_5dp"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_12sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/login_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/dimen_18dp"
                android:paddingRight="@dimen/dimen_18dp" />

            <include layout="@layout/dialog_login_main_first" />

            <include layout="@layout/dialog_login_main_other" />

            <LinearLayout
                android:id="@+id/ll_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_bottom_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册即代表同意"
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户协议》"
                    android:textColor="@color/color_008EFF"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/tv_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《风险告知》"
                    android:textColor="@color/color_008EFF"
                    android:textSize="@dimen/dimen_12sp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>