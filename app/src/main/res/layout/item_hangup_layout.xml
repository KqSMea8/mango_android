<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:id="@+id/ll_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="----"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18sp" />

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_market_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:text="---"
            android:textSize="@dimen/dimen_21sp" />

        <ImageView
            android:id="@+id/iv_buy_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@drawable/trade_buy_arrow" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_buy_text"
            android:layout_width="@dimen/dimen_31dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_trade_buy"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_11sp"
            android:text="--"/>

        <TextView
            android:id="@+id/tv_kg_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:text="--- --"
            android:textColor="@color/color_828282"
            android:textSize="@dimen/dimen_13sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_19dp"
            android:text="挂单价"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp" />

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_hangup_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18sp"
            android:text="-- ± --"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/bg_dotted_line"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dimen_53dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:text="建仓成本"/>

        <TextView
            android:id="@+id/tv_open_price"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="--元"/>


        <TextView
            android:id="@+id/tv_target_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_F74F54"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="止盈 --%"/>

        <TextView
            android:id="@+id/tv_target_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1AC47A"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:text="止损 --%"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dimen_53dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:text="手续费"/>

        <TextView
            android:id="@+id/tv_open_fee"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="--元"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:text="挂单时间"/>

        <TextView
            android:id="@+id/tv_hangup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="-- --"/>
    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="@dimen/dimen_48dp"
           android:layout_marginRight="@dimen/dimen_10dp"
           android:layout_marginTop="@dimen/dimen_12dp">

           <TextView
               android:id="@+id/tv_repeal_hangup"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="@color/color_727272"
               android:textSize="@dimen/dimen_15sp"
               android:background="@drawable/bg_shape_r3_d8d7d7"
               android:paddingTop="@dimen/dimen_4dp"
               android:paddingBottom="@dimen/dimen_4dp"
               android:gravity="center"
               android:layout_marginRight="@dimen/dimen_8dp"
               android:text="撤单"/>


           <TextView
               android:id="@+id/tv_update_hangup"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="@color/color_ffffff"
               android:textSize="@dimen/dimen_15sp"
               android:background="@drawable/bg_shape_r3_008eff"
               android:paddingTop="@dimen/dimen_4dp"
               android:paddingBottom="@dimen/dimen_4dp"
               android:gravity="center"
               android:layout_marginLeft="@dimen/dimen_8dp"
               android:text="修改"/>
       </LinearLayout>
    <View
        android:id="@+id/v_max_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/color_FAFAFA"
        android:layout_marginTop="@dimen/dimen_15dp"/>
</LinearLayout>