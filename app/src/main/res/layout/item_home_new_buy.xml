<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_7dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginBottom="@dimen/dimen_5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_follow_recommended"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/ic_arrow_left"
            android:drawablePadding="@dimen/dimen_5dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:text="跟买大厅"
            android:textColor="@color/color_A7A7A7"
            android:textSize="@dimen/dimen_13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@mipmap/home_shadow2"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:text="---"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/tv_goods_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_buy_type"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@drawable/bg_trade_buy"
                    android:gravity="center"
                    android:text="买涨"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/dimen_10sp" />

                <com.paizhong.manggo.widget.RefreshView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="--千克 --手"
                    android:textColor="@color/color_828282"
                    android:textSize="@dimen/dimen_13sp" />

            </LinearLayout>


            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/bg_follow_time"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="13分钟前"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_13sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_create_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_name"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="建仓点位 ----"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_float_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_create_point"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="浮动点位 ----"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_name"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/tv_create_point"
                android:text="跟买人数 ----"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_follow_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_create_point"
                android:layout_alignLeft="@+id/tv_follow_num"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="返还积分 ----"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/dimen_13sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_follow_buy"
                android:layout_width="@dimen/dimen_85dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_below="@+id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/bg_shape_follow_buy"
                android:gravity="center"
                android:text="立即跟买"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_float_point"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_6dp"
            android:layout_marginBottom="@dimen/dimen_7dp"
            android:background="@color/color_FBFBFB"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_9dp"
            android:paddingRight="@dimen/dimen_9dp">

            <com.paizhong.manggo.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:src="@mipmap/other_empty" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:text="----"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周盈利率 "
                android:textSize="@dimen/dimen_12sp" />

            <com.paizhong.manggo.widget.RefreshView
                android:id="@+id/tv_week_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>