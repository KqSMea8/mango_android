<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_calendar_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dimen_18sp"
                tools:text="美国至4月28日当周API库存" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@mipmap/bg_calendar3"
                android:orientation="vertical"
                android:padding="@dimen/dimen_25dp">

                <TextView
                    android:id="@+id/tv_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="下次公布时间：06-07，18:00" />

                <TextView
                    android:id="@+id/tv_detail_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="数据公布机构：英国工业联合会（CBI）" />

                <TextView
                    android:id="@+id/tv_detail_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="发布频率：每月" />

                <TextView
                    android:id="@+id/tv_detail_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="统计方法：英基于对零售商和批发商调查所得到的指数" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp">

                    <View
                        android:layout_width="@dimen/dimen_5dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_008EFF" />

                    <TextView
                        android:id="@+id/tv_flag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:text="数据影响"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="未公布"
                    android:textColor="@color/color_008EFF"
                    android:textSize="@dimen/dimen_15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp">

                    <View
                        android:layout_width="@dimen/dimen_5dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_008EFF" />

                    <TextView
                        android:id="@+id/tv_flag1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:text="数据释义"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="暂无" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp">

                    <View
                        android:layout_width="@dimen/dimen_5dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_008EFF" />

                    <TextView
                        android:id="@+id/tv_flag2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:text="趣味解读"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="暂无" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>