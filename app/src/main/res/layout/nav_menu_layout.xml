<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_3dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/selector_tab_radio"
            android:textSize="@dimen/dimen_10sp" />


        <ImageView
            android:id="@+id/nav_iv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nav_tv"
            android:layout_alignTop="@+id/nav_tv"
            android:layout_alignRight="@+id/nav_tv"
            android:layout_alignBottom="@+id/nav_tv"
            android:src="@drawable/bg_tab_selector" />
    </RelativeLayout>

</LinearLayout>