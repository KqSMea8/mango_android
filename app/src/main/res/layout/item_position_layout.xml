<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/v_max_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/color_FAFAFA"/>

    <LinearLayout
        android:id="@+id/ll_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="---"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18sp" />

        <com.paizhong.manggo.widget.DinTextView
            android:id="@+id/tv_market_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:text="----"
            android:textSize="@dimen/dimen_21sp" />

        <ImageView
            android:id="@+id/iv_buy_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@drawable/trade_buy_arrow" />


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_r5_d8d7d7"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingLeft="@dimen/dimen_18dp"
            android:paddingRight="@dimen/dimen_18dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:text="加仓"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_buy_text"
            android:layout_width="@dimen/dimen_31dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_trade_buy"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_11sp"
            android:text="--"/>


        <LinearLayout
            android:layout_width="120.2dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_kg_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- --"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/dimen_13sp" />

            <ImageView
                android:id="@+id/iv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:src="@mipmap/ic_voucher" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:text="@string/text19"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_open_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_727272"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:text="---"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:drawableRight="@drawable/trade_arrow_select"
            android:text="详细"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:text="@string/text4"/>

        <TextView
            android:id="@+id/tv_open_fee"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="--"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:text="@string/text2"/>

        <TextView
            android:id="@+id/tv_open_dw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="-----"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:text="@string/text3"/>

        <TextView
            android:id="@+id/tv_float_point"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:text="---"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:text="@string/text18"/>

        <ImageView
            android:id="@+id/iv_hold_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@drawable/trade_hold_off_open"
            android:gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content_thr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp"
            android:text="@string/text5"/>

        <TextView
            android:id="@+id/tv_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/dimen_13sp"
            android:textColor="@color/color_727272"
            android:text="-----"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/bg_dotted_line"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center_vertical">

         <com.paizhong.manggo.widget.DinTextView
             android:id="@+id/tv_float_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/dimen_27sp"
             android:textColor="@color/color_1AC47A"
             android:background="@mipmap/bg_float_price"
             android:paddingLeft="@dimen/dimen_5dp"
             android:paddingRight="@dimen/dimen_5dp"
             android:gravity="center_vertical"
             android:text="---"/>


          <LinearLayout
              android:id="@+id/ll_target"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/bg_shape_r5_d8d7d7"
              android:padding="@dimen/dimen_5dp"
              android:layout_marginLeft="@dimen/dimen_10dp">

              <TextView
                  android:id="@+id/tv_target_profit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_F74F54"
                  android:textSize="@dimen/dimen_12sp"
                  android:text="止盈 --%"/>

              <TextView
                  android:id="@+id/tv_target_stop"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/dimen_12sp"
                  android:layout_marginRight="@dimen/dimen_5dp"
                  android:textColor="@color/color_1AC47A"
                  android:text="止损 --%"/>
          </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/line_height"
                    android:layout_weight="1"/>
        
            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_r3_008eff"
                android:textSize="@dimen/dimen_15sp"
                android:textColor="@color/color_ffffff"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_18dp"
                android:paddingRight="@dimen/dimen_18dp"
                android:text="平仓"/>
    </LinearLayout>
</LinearLayout>