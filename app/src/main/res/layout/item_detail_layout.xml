<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:background="@mipmap/bg_follow_shadow1"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_17dp"
        android:layout_marginRight="@dimen/dimen_17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:gravity="center_vertical"
            android:text="---"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buy_type"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:background="@drawable/bg_trade_buy"
                    android:textSize="@dimen/dimen_11sp"
                    tools:text="买涨" />

                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:text="--千克 --手"
                    android:textColor="@color/color_828282"
                    android:textSize="@dimen/dimen_13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="wrap_content"
                    android:text="建仓成本"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_cost_price"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:text="--元"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建仓点位"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_create_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="----"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="wrap_content"
                    android:text="浮动点位"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />


                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_13sp"
                    tools:text="---" />

                <TextView
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:text="建仓手续费"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />

                <TextView
                    android:id="@+id/tv_service_charge"
                    android:layout_width="@dimen/dimen_58dp"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textColor="@color/color_878787"
                    android:textSize="@dimen/dimen_13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建仓时间"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/dimen_13sp" />


                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="----"
                    android:textSize="@dimen/dimen_13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_17dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginRight="@dimen/dimen_17dp">

        <TextView
            android:id="@+id/tv_follow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_13sp" />

        <TextView
            android:id="@+id/tv_follow_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:background="@drawable/bg_shape_follow_buy"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="立即跟买"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_15sp" />
    </RelativeLayout>
</LinearLayout>