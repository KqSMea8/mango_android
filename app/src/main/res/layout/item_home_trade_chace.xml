<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_5dp">

    <TextView
        android:id="@+id/tv_time1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:text="6月11日"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time1"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@drawable/bg_home_border_gray"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:layout_marginBottom="@dimen/dimen_7dp"
            android:drawablePadding="@dimen/dimen_5dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_15dp"
            android:text="GL铜 看多"
            android:textColor="@color/color_F74F54"
            android:textSize="@dimen/dimen_17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="专家解读 | 商品期货涨跌互现，商品期货涨跌互现，品期货涨跌互现"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="建议:商品期货涨跌互现，商品期货涨跌互现"
            android:textSize="@dimen/dimen_12sp" />

        <TextView
            android:id="@+id/tv_time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:text="2018-08-20 15:43"
            android:textSize="@dimen/dimen_12sp" />


        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="资深分析师"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_13sp" />

            <TextView
                android:id="@+id/tv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73%买涨"
                android:textColor="@color/color_F74F54"
                android:textSize="@dimen/dimen_12sp" />


            <com.paizhong.manggo.widget.FlickerProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dimen_65dp"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/tv_author"
                android:background="@drawable/bg_trade_progress"
                android:progress="50"
                android:progressDrawable="@drawable/progress_position_ratio" />

            <TextView
                android:id="@+id/tv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73%买涨"
                android:textColor="@color/color_1AC47A"
                android:textSize="@dimen/dimen_12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@mipmap/bg_follow_time"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="13分钟前"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_13sp" />

</RelativeLayout>