<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="GL银"
                android:textColor="@color/color_363030"
                android:textSize="@dimen/dimen_17sp" />


            <com.paizhong.manggo.widget.DinTextView
                android:id="@+id/tv_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="---"
                android:textColor="@color/color_363030"
                android:textSize="@dimen/dimen_24sp" />
        </LinearLayout>

        <include layout="@layout/include_firstnew_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_up_user_probability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_place_order_up"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_13dp"
                android:paddingBottom="@dimen/dimen_13dp">

                <TextView
                    android:id="@+id/tv_up_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:text="看涨买多"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_up_user_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="后续价格上涨你就赚钱\n55%用户的选择"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_down_user_probability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_place_order_down"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_13dp"
                android:paddingBottom="@dimen/dimen_13dp">

                <TextView
                    android:id="@+id/tv_down_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6dp"
                    android:text="看空买跌"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_down_user_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="后续价格下跌你就赚钱\n45%用户的选择"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_12sp" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_place_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@drawable/bg_shape_new_guide"
            android:gravity="center"
            android:text="下单.坐等收益"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_20sp" />


        <TextView
            android:id="@+id/tv_jump_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="不会玩？看看老司机的攻略吧 >"
            android:textColor="@color/color_FF5500"
            android:textSize="@dimen/dimen_12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>