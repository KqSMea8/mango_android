<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/app_margin"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <com.paizhong.manggo.widget.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:src="@mipmap/user_head_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/iv_head"
        android:gravity="center_vertical"
        android:text="xx"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_13sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:text="xx"
        android:textColor="@color/color_727272"
        android:textSize="@dimen/dimen_13sp" />

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="用"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/tv0"
        android:text="xx"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/tv_amount"
        android:text="xx"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/tv_type"
        android:text="xx"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/tv_product_name"
        android:text="盈利"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_close_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/tv1"
        android:text="xx"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:text="xx"
        android:textColor="@color/color_727272"
        android:textSize="@dimen/dimen_13sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/tv_des"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:background="@color/line_color" />

</RelativeLayout>