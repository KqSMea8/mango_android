<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_13dp"
            android:layout_height="@dimen/dimen_17dp"
            android:src="@mipmap/ic_login_mobile" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="13"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="@dimen/dimen_17sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_13dp"
            android:layout_height="@dimen/dimen_17dp"
            android:src="@mipmap/ic_sms_code" />

        <EditText
            android:id="@+id/et_smsed_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="@dimen/dimen_17sp" />


        <com.paizhong.manggo.widget.CountDownTextView
            android:id="@+id/btn_sendCode"
            style="@style/count_down_view"
            android:layout_gravity="bottom"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:enabled="false"
            android:singleLine="true"
            app:refer="@id/et_mobile" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_reset_pwd_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:drawablePadding="@dimen/dimen_15dp"
            android:hint="输入资金密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="@dimen/dimen_17sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_login_forget_pwd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:text="忘记密码"
        android:textColor="@color/color_008EFF"
        android:textSize="@dimen/dimen_14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_commit_first"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_18dp"
        android:layout_marginRight="@dimen/dimen_18dp"
        android:background="@drawable/bg_selector_btton"
        android:gravity="center"
        android:enabled="false"
        android:text="登录/注册"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dimen_18sp" />

</LinearLayout>