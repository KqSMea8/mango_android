<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_dialog_bottom"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/dimen_44dp"
        android:layout_height="@dimen/dimen_4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/bg_shape_r4_e6e6e6" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:src="@mipmap/ic_app_position_succ" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:text="建仓成功"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/bg_corner_gray2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_17dp"
        android:paddingTop="@dimen/dimen_13dp"
        android:paddingRight="@dimen/dimen_17dp"
        android:paddingBottom="@dimen/dimen_13dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_get_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_727272" />

        <TextView
            android:id="@+id/tv_all_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/user_right"
            android:drawablePadding="@dimen/dimen_4dp"
            android:textColor="@color/color_727272" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_promise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:drawableLeft="@mipmap/ic_arrow_blue_down"
        android:drawablePadding="@dimen/dimen_6dp"
        android:text="为您的投资之路保驾护航，无惧亏损！"
        android:textColor="@color/color_727272"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_strategy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_r3_d8d7d7"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_follow_buy"
            android:gravity="center"
            android:text="查看持仓"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dimen_18sp" />
    </LinearLayout>

</LinearLayout>