<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_product_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginRight="@dimen/app_margin"
    android:layout_marginTop="@dimen/dimen_17dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="---"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_18sp" />

    <com.paizhong.manggo.widget.DinTextView
        android:id="@+id/tv_product_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:text="---"
        android:textSize="@dimen/dimen_21sp" />

    <ImageView
        android:id="@+id/iv_down_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:src="@drawable/trade_buy_arrow"/>


    <TextView
        android:id="@+id/tv_market_qh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:background="@drawable/bg_corner_gray"
        android:drawableLeft="@drawable/bg_place_order_open"
        android:paddingBottom="@dimen/dimen_3dp"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingRight="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_3dp"
        android:text="@string/text13"
        android:textColor="@color/color_363030"
        android:textSize="@dimen/dimen_15sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/line_height"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_y_closed" />
</LinearLayout>