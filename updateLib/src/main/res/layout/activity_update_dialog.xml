<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0000000" />


        <RelativeLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_dialog"
                android:layout_marginTop="119dp">
            <TextView
                android:id="@+id/jjdxm_update_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="发现新版本"
                android:textColor="#3C3342"
                android:textStyle="bold"
                android:textSize="18sp" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#878787"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:text="更新内容"/>

            <TextView
                android:id="@+id/jjdxm_update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#323232"
                android:textSize="14sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EDEDED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/jjdxm_update_id_cancel"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="下次再说"
                    android:textColor="#878787"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/jjdxm_update_id_ok"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="立即更新"
                    android:textColor="#008eff"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_update_bg"
                android:scaleType="fitXY"/>
        </RelativeLayout>

</RelativeLayout>
